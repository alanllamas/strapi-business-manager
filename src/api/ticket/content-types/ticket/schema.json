{
  "kind": "collectionType",
  "collectionName": "tickets",
  "info": {
    "singularName": "ticket",
    "pluralName": "tickets",
    "displayName": "ticket",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "ticket_number": {
      "type": "integer",
      "unique": true,
      "required": true
    },
    "client": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::client.client",
      "inversedBy": "tickets"
    },
    "sale_date": {
      "type": "datetime"
    },
    "shipping_price": {
      "type": "decimal"
    },
    "total": {
      "type": "decimal"
    },
    "products": {
      "displayName": "ticket-product",
      "type": "component",
      "repeatable": true,
      "component": "tickets.ticket-product"
    },
    "sub_total": {
      "type": "decimal"
    },
    "invoice": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::invoice.invoice",
      "inversedBy": "tickets"
    },
    "ticket_status": {
      "type": "enumeration",
      "enum": [
        "creado",
        "pagado",
        "adeudo",
        "cancelado"
      ],
      "default": "creado"
    }
  }
}
